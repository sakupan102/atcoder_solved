      "source": [
        "#ABC105のC問題\n",
        "N=int(input())\n",
        "cnt=1\n",
        "res=\"\"\n",
        "ans=\"\"\n",
        "while N!=0:\n",
        "  if N%((-2)**cnt)==0:\n",
        "    res+=\"0\"\n",
        "  else:\n",
        "    N -=(-2)**(cnt-1)\n",
        "    res +=\"1\"\n",
        "  cnt += 1\n",
        "\n",
        "for i in range(len(res)-1,-1,-1):\n",
        "  ans += res[i]\n",
        "\n",
        "if len(ans)!=0:\n",
        "  print(ans)\n",
        "else:\n",
        "  print(0)"
      ]
    }
  ]
}